<UserControl x:Class="PR8.Elements.Day"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PR8.Elements"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel>
            
            <Label x:Name="Date" Content="12.12.2025" FontSize="25" Margin="10"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock x:Name="Time" TextAlignment="Center" Text="00:00" FontSize="20"/>
                <TextBlock x:Name="Temperature" Grid.Column="1" TextAlignment="Center" Text="+15" FontSize="20"/>
                <TextBlock x:Name="Pressure" Grid.Column="2" TextAlignment="Center" Text="660 " FontSize="20"/>
                <TextBlock x:Name="Humidity" Grid.Column="3" TextAlignment="Center" Text="50%" FontSize="20"/>
            </Grid>
            <ScrollViewer Margin="10,70,10,10">
                <StackPanel x:Name="HoursParent" >
                </StackPanel>
            </ScrollViewer>
        </StackPanel>
    </Grid>
</UserControl>
