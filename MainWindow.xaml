<Window x:Class="PR8.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PR8"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Horizontal" Height="25" VerticalAlignment="Top">
            <TextBox Text="Город:" BorderThickness="0"/>
            <TextBox x:Name="City" Width="200" Height="25" BorderThickness="0" />
            <Button x:Name="GetWeather" Click="TryGetWeather" Content="Получить" Width="100"/>
            <TextBlock x:Name="Count" Text="Запросов: 0/30" Width="100" Height="25"/>
        </StackPanel>
        <StackPanel x:Name="DaysParent" Margin="0,25,0,0"/>

    </Grid>
</Window>
